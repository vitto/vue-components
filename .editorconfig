# EditorConfig is awesome: http://EditorConfig.org
# Sublime Text PackageControl plug-in: EditorConfig

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[{*.jsx, *.js}]
indent_size = 2
indent_style = space

[*.scss]
indent_size = 2
tab_width = 2

[*.json]
indent_size = 2
tab_width = 2
